@model Dominio.Entidades.Categoria

<h2>Formul√°rio de Categoria</h2>
<form class="form-horizontal" asp-action="Salvar" asp-controller="Categoria" method="POST">
    <input type="hidden" class="form-control" asp-for="Id">
    <div class="form-group">
        <label class="col-md-1 control-label" for="Nome">Nome</label>
        <div class="col-md-2">
            <input type="text" class="form-control" asp-for="Nome">
        </div>
    </div>    
    <div class="form-group">
        <label class="col-md-1 control-label" for="PermiteEstoque">Estoque</label>
            <div class="col-md-2">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <input type="checkbox" class="input-group-text" asp-for="PermiteEstoque">
                        </div>
                    </div>
                    <label class="form-control" for="PermiteEstoque">Permite</label> 
                </div>
            </div>     
    </div>
        <div class="form-group">
            <div class="col-md-2">
                <button class="btn btn-success">Salvar</button>
            </div>
        </div>
   
</form>