@model Dominio.Entidades.Pedido

<h2>Formulário de Pedido</h2>
<form class="form-horizontal" asp-action="Salvar" asp-controller="Pedido" method="POST">
   
    <div class="form-group">
        <label class="col-md-1 control-label" for="Numero">Número</label>
        <div class="col-md-2">
            <input type="text" class="form-control" asp-for="Numero">
        </div>
    </div> 
    
        <div class="form-group">
            <div class="col-md-2">
                <button class="btn btn-success">Salvar</button>
            </div>
        </div>
   </div>
</form>